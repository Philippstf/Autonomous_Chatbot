{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python app.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "8001",
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO",
        "PYTHONPATH": "/app"
      }
    }
  }
}